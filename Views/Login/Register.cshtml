@model Dziennik_Zadan.Models.Rejestracja

<h1>Rejestracja</h1>
@using(Html.BeginForm("Register","Login", FormMethod.Post))
{
    @Html.ValidationSummary();
    <span>Login: </span> @Html.TextBoxFor(x=>x.UserName)
    <span>E-mail: </span> @Html.TextBoxFor(x=>x.Email)
    <span>Hasło: </span> @Html.PasswordFor(x=>x.Password)

    <button type="submit">Rejestruj</button>
}
